<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/calculatorFragment">

    <fragment
        android:id="@+id/calculatorFragment"
        android:name="com.example.currencycalculatorapp.presentation.fragment.CurrencyCalculatorFragment"
        tools:layout="@layout/fragment_currency">

        <action
            android:id="@+id/historyNavigation"
            app:destination="@id/exchangeHistoryFragment" />

    </fragment>

    <fragment
        android:id="@+id/exchangeHistoryFragment"
        android:name="com.example.currencycalculatorapp.presentation.fragment.ExchangeHistoryFragment"
        tools:layout="@layout/fragment_exchange_history">

        <action
            android:id="@+id/back"
            app:destination="@id/calculatorFragment"
            app:popUpTo="@id/calculatorFragment" />

    </fragment>

</navigation>